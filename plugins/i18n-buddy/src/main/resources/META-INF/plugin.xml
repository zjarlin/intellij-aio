<idea-plugin>
    <id>site.addzero.i18n-buddy</id>
    <name>I18n Buddy</name>
    <vendor>AddZero</vendor>

    <idea-version since-build="242" until-build="262.*"/>

    <description>
        Scan hardcoded strings in Kotlin files and extract them to i18n constants.
        Supports customizable wrapper functions, locale expressions, and constant generation.
        Key generation: ASCII passthrough, Chinese pinyin (built-in), or custom translation via SPI.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="I18nBuddy" displayType="BALLOON" isLogByDefault="true"/>

        <projectService serviceImplementation="site.addzero.i18n.buddy.settings.I18nBuddySettingsService"/>

        <projectConfigurable
            parentId="tools"
            instance="site.addzero.i18n.buddy.settings.I18nBuddySettingsConfigurable"
            id="site.addzero.i18n.buddy.settings"
            displayName="I18n Buddy"/>
    </extensions>

    <actions>
        <action id="I18nBuddy.ScanHardcodedStrings"
                class="site.addzero.i18n.buddy.action.ScanHardcodedStringsAction"
                text="I18n Buddy: Scan Hardcoded Strings"
                description="Scan project for hardcoded strings and extract to i18n constants">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
