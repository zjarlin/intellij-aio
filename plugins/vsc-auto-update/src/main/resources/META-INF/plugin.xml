<idea-plugin>
    <id>site.addzero.vsc-auto-update</id>
    <name>VSC Auto Update</name>
    <vendor>zjarlin</vendor>

    <description><![CDATA[
    <h3>VSC Auto Update - Auto Pull Before Git Push</h3>
    <p>Automatically pulls the latest changes from remote before you push, avoiding push conflicts.</p>

    <h4>Key Features:</h4>
    <ul>
        <li>üîÑ <b>Auto Pull Before Push</b>: Automatically pulls latest changes before git push</li>
        <li>‚ö° <b>Conflict Prevention</b>: Reduces merge conflicts by keeping your branch up-to-date</li>
        <li>üîî <b>Notification</b>: Shows balloon notification when auto-pull is triggered</li>
        <li>‚öôÔ∏è <b>Configurable</b>: Can be enabled/disabled in settings</li>
    </ul>

    <h4>Usage:</h4>
    <ol>
        <li>Go to Settings ‚Üí Tools ‚Üí VSC Auto Update</li>
        <li>Enable "Auto Pull Before Push"</li>
        <li>When you push, the plugin will automatically pull first</li>
    </ol>
    ]]></description>

    <change-notes><![CDATA[
    <p>1.0.0 - Initial release</p>
    ]]></change-notes>

    <idea-version since-build="242" until-build="262.*"/>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true">Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">

        <!-- Startup Activity to initialize Git push listener -->
        <postStartupActivity
            implementation="site.addzero.autoupdate.GitPushListenerStartupActivity"/>

        <!-- Application Settings for persistent config -->
        <applicationService
            serviceImplementation="site.addzero.autoupdate.AutoUpdateSettings"/>

        <!-- Settings Page -->
        <applicationConfigurable
            parentId="tools"
            instance="site.addzero.autoupdate.AutoUpdateConfigurable"
            id="site.addzero.autoupdate.settings"
            displayName="VSC Auto Update"/>

        <!-- Notification Group -->
        <notificationGroup
            id="VSCAutoUpdate"
            displayType="BALLOON"/>
    </extensions>

    <actions>
        <!-- Manual Pull Action -->
        <action id="site.addzero.autoupdate.ManualPullAction"
                class="site.addzero.autoupdate.ManualPullAction"
                text="Pull from Remote"
                description="Pull latest changes from remote repository"
                icon="AllIcons.Actions.Refresh">
            <add-to-group group-id="VcsGroup" anchor="after" relative-to-action="Vcs.Push"/>
        </action>
    </actions>
</idea-plugin>
